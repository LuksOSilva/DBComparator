<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" styleClass="main-container" stylesheets="@../comparisonScreens/css/Main.css, @../comparisonScreens/css/TableComparisonResult.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luksosilva.dbcomparator.controller.comparisonScreens.TableComparisonResultScreenController">
    <children>

        <!-- Title -->
        <HBox alignment="CENTER_LEFT" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
            <Label fx:id="titleLabel" styleClass="title-text" text="table_name" />
        </HBox>

                    <!-- Filters -->
        <!-- Filters -->
        <HBox spacing="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="80">
            <VBox prefHeight="33.0" prefWidth="546.0" spacing="10">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="ALWAYS">
                        <children>
                            <ComboBox fx:id="columnsComboBox" minWidth="200.0" promptText="Coluna" styleClass="cmb-search" HBox.hgrow="ALWAYS" />
                            <ComboBox fx:id="sourcesComboBox" managed="false" promptText="Todas" styleClass="cmb-search" visible="false" HBox.hgrow="ALWAYS" />
                            <TextField fx:id="searchTextField" onKeyPressed="#onSearchKeyPressed" promptText="Pesquisar por..." styleClass="txt-search" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <children>
                     <CheckBox fx:id="showExclusiveRecordsCheckBox" mnemonicParsing="false" onAction="#applyFilter" selected="true" text="Mostrar registros exclusivos de uma fonte" />
                     <CheckBox fx:id="showDivergingRecordsCheckBox" mnemonicParsing="false" onAction="#applyFilter" selected="true" text="Mostrar registros com diferença" />
                  </children>
               </HBox>
                </children>
            </VBox>
         <HBox prefHeight="0.0" prefWidth="164.0" HBox.hgrow="ALWAYS">
            <children>
                      <Button fx:id="applyFilterButton" minWidth="77.0" onAction="#applyFilter" styleClass="btn-action" text="Pesquisar">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </Button>
               <Region minWidth="10.0" HBox.hgrow="ALWAYS" />
               <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                  <children>
            
                                    <MenuButton fx:id="visibleColumnsMenuButton" minWidth="193.0" styleClass="cmb-search" text="Colunas Visíveis" />
                  </children>
               </VBox>
            </children>
         </HBox>
        </HBox>

                       <!-- Table -->
        <TableView fx:id="differencesTableView" layoutY="148.0" prefHeight="372.0" prefWidth="920.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="150.0" />

        <!-- Footer buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <Button onAction="#onCopyQueryButtonClicked" styleClass="btn-primary" text="Copiar query" />
            <Button onAction="#onExportCsvButtonClicked" styleClass="btn-primary" text="Exportar CSV" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onCloseButtonClicked" styleClass="btn-secondary" text="Fechar" />
        </HBox>

    </children>
</AnchorPane>
