<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="600.0" prefWidth="800.0"
            styleClass="main-container" stylesheets="@css/Main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.luksosilva.dbcomparator.controller.comparisonScreens.LoadingScreenController">
    <children>
        <VBox alignment="CENTER" spacing="20.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" >
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <children>
                <ProgressIndicator prefHeight="100.0" prefWidth="100.0" />
                <Label fx:id="loadingMessageLabel" text="Processando fonte de dados, aguarde...">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
