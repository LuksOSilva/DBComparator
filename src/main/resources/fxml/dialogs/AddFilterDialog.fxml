<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.DatePicker?>
<AnchorPane prefHeight="377.0" prefWidth="400" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luksosilva.dbcomparator.controller.dialogs.AddFilterDialogController">

    <VBox prefHeight="377.0" prefWidth="400.0" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
      <HBox prefHeight="17.0" prefWidth="360.0">
         <children>
      
              <Label fx:id="titleLabel" styleClass="dialog-title" text="Adicionar novo filtro" />
            <Region prefHeight="39.0" prefWidth="122.0" HBox.hgrow="ALWAYS" />
            <VBox prefHeight="39.0" prefWidth="78.0" spacing="5.0">
               <children>
                  <RadioButton fx:id="defaultFilterRadioButton" mnemonicParsing="false" selected="true" text="Padrão" />
                  <RadioButton fx:id="advancedFilterRadioButton" mnemonicParsing="false" text="Avançado" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
         <VBox prefHeight="235.0" prefWidth="360.0" spacing="8">
         <children>
            <VBox prefHeight="32.0" prefWidth="360.0">
               <children>
                  <Label text="Tabela" />
                   <ComboBox fx:id="tableComboBox" editable="true" prefHeight="25.0" prefWidth="378.0" visibleRowCount="5" />
               </children>
            </VBox>
            <VBox fx:id="defaultFilterFieldsBox"  prefHeight="184.0" prefWidth="360.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Campo" />
                         <ComboBox fx:id="columnComboBox" disable="true" editable="true" prefHeight="25.0" prefWidth="360.0" visibleRowCount="5" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Tipo de Filtro" />
                        <ComboBox fx:id="filterTypeComboBox" disable="true" prefHeight="25.0" prefWidth="360.0" visibleRowCount="5" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox fx:id="filterHeaderHBox" alignment="CENTER_RIGHT">
                           <children>
                              <Label text="Filtro" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="filterTipLabel" alignment="CENTER">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox fx:id="oneTextFieldHBox" disable="true" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="filterTextField" HBox.hgrow="ALWAYS" promptText="Digite o Filtro..." />
                              <DatePicker fx:id="filterDatePicker" HBox.hgrow="ALWAYS" prefWidth="999" promptText="Selecione a Data..." managed="false" visible="false" editable="false"/>
                           </children>
                        </HBox>
                        <HBox fx:id="twoTextFieldsHBox" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" disable="true" managed="false"  visible="false" >
                           <children>
                              <TextField fx:id="lowerValueTextField" prefHeight="25.0" prefWidth="167.0" promptText="Digite o Menor Valor..." />
                              <DatePicker fx:id="lowerValueDatePicker" HBox.hgrow="ALWAYS" promptText="Selecione a Menor Data..." managed="false" visible="false" editable="false" />
                              <Label text="E">
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="higherValueTextField" prefHeight="25.0" prefWidth="167.0" promptText="Digite o Maior Valor..." />
                              <DatePicker fx:id="higherValueDatePicker" HBox.hgrow="ALWAYS" promptText="Selecione a Maior Data..." managed="false" visible="false" editable="false" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <CheckBox fx:id="applyToMatchingColumnsCheckBox" mnemonicParsing="false" text="Adicionar filtro para todas tabelas com o mesmo campo">
                     <tooltip>
                        <Tooltip text="Para um campo ser considera o mesmo, deve possuir o mesmo nome e tipo entre as tabelas" />
                     </tooltip>
                  </CheckBox>
               </children>
            </VBox>
            <VBox fx:id="advancedFilterFieldsBox" prefHeight="200.0" prefWidth="100.0" managed="false" visible="false">
               <children>
                  <HBox prefHeight="17.0" prefWidth="322.0">
                     <children>
                        <Label text="Consulta SQL" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label  text="insira a cláusula WHERE" />
                     </children>
                  </HBox>
                  <TextArea fx:id="advancedFilterTextArea" prefHeight="200.0" prefWidth="200.0" disable="true" />
               </children>
            </VBox>
         </children>
      </VBox>


        <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="360.0">
            <Button maxWidth="80" onAction="#onCancelClicked" styleClass="dialog-button" text="fechar" />
         <Region prefHeight="27.0" prefWidth="64.0" />
         <Button fx:id="addButton" maxWidth="116.0" onAction="#onAddButtonClicked" prefHeight="27.0" prefWidth="81.0" styleClass="dialog-button" text="adicionar" />
         <Button fx:id="addAndCloseButton" maxWidth="126.0" onAction="#onAddAndCloseButtonClicked" prefHeight="27.0" prefWidth="126.0" styleClass="dialog-button" text="adicionar e fechar" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Button>
        </HBox>
    </VBox>
</AnchorPane>
