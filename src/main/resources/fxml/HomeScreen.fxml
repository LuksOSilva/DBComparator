<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luksosilva.dbcomparator.controller.HomeScreenController">
   <children>

      <!-- Left Sidebar -->
      <VBox alignment="CENTER" prefHeight="650.0" prefWidth="235.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </ImageView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="newComparisonBtn" mnemonicParsing="false" onMouseClicked="#newComparisonBtnClick" prefHeight="35.0" prefWidth="180.0" text="Nova Comparação" />
                  <Button fx:id="importComparisonBtn" mnemonicParsing="false" onMouseClicked="#importComparisonBtnClick" prefHeight="35.0" prefWidth="180.0" text="Importar Comparação" />
                  <Button fx:id="settingsBtn" mnemonicParsing="false" onMouseClicked="#settingsBtnClick" prefHeight="35.0" prefWidth="180.0" text="Configurações" />
               </children>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="exitBtn" mnemonicParsing="false" onMouseClicked="#exitBtnClick" prefHeight="35.0" prefWidth="90.0" text="Sair" />
         </children>
         <padding>
            <Insets bottom="25.0" />
         </padding>
      </VBox>

      <!-- Main Content Area -->
      <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="235.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <VBox fx:id="comparisonsContainer" prefWidth="765.0" spacing="15">
               <padding>
                  <Insets bottom="15" left="15" right="15" top="15" />
               </padding>

               <!-- We will dynamically add comparison cards here -->
            </VBox>
         </content>
      </ScrollPane>

   </children>
</AnchorPane>
